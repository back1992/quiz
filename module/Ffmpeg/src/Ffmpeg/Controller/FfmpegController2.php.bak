	function check_for_subdirs($path){
		$found = false;
		$items = scandir($path);
		foreach($items as $item){
			if($item != '.' && $item != '..' && is_dir($path.'/'.$item) ){
				$found=true;
				break;
			}else{
				$found=false;
			}
		}
		return $found;
	}

